#!/bin/bash
# Pre-commit hook for mcp-backlog
# Runs build and tests before allowing commit

echo "Running pre-commit checks..."

# Run build
echo "Building..."
bun run build
if [ $? -ne 0 ]; then
    echo "Build failed. Commit aborted."
    exit 1
fi

# Run tests
echo "Running tests..."
bun test
if [ $? -ne 0 ]; then
    echo "Tests failed. Commit aborted."
    exit 1
fi

echo "Pre-commit checks passed!"
exit 0
